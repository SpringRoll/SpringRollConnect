#userTemplate.hidden
	span.search-result
		input(type="hidden" name="user" value="%id%")
		button.btn.btn-sm.btn-default(type="button") %name% &times;
.modal.fade#addUser
	.modal-dialog
		form.modal-content.form-horizontal(method="post" action=url)
			.modal-header
				button.close(data-dismiss="modal") &times;
				h4.modal-title Add User
			.modal-body
				.input-group
					.input-group-addon
						span.glyphicon.glyphicon-search
					input.form-control#userSearch(type="text" placeholder="Search for users" data-search="/users/search" data-list="#userSearchDisplay" autocomplete="off")
				.dropdown.search#userSearchDisplay
					ul.dropdown-menu
				.search-results#users
			.modal-footer
				button.btn.btn-primary(type="submit" name="action" value="addUsers") Add
				|  
				button.btn.btn-default(type="button" data-dismiss="modal") Cancel