extend templates/normal

append title
	| Password Reset -

append content
	.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
		form.panel.panel-default.form-horizontal(method="post" action="/reset/#{token}")
			.panel-heading
				h3.panel-title Password Reset
			.panel-body
				include partials/feedback
				.form-group
					label.control-label.col-sm-4(for="password") New Password
					.col-sm-8
						input.form-control(type="password" name="password" id="password")
				.form-group
					label.control-label.col-sm-4(for="confirm") Confirm Password
					.col-sm-8
						input.form-control(type="password" name="confirm" id="confirm")
				.form-group.form-actions.text-center
					.col-sm-8.col-sm-offset-4
						button.btn.btn-lg.btn-primary(type="submit") 
							span.icon.glyphicon.glyphicon-pencil
							| Reset