extend templates/normal

append title
	| Login -

append content
	div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
		.panel.panel-default
			.panel-heading
				h2.panel-title.text-center
					span.icon.glyphicon.glyphicon-user
					| Login
			.panel-body
				include partials/feedback
				form.form-login(action='/login', method='post')
					.form-group
						input.input-lg.form-control(type='text', name='username',  placeholder='Username',required, autofocus)
					.form-group
						input.input-lg.form-control(type='password', name='password', placeholder='Password', required)
					.form-group.form-actions.text-center
						button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign In
						a.btn.btn-link(href='/register') Create Account 
						a.btn.btn-link(href='/forgot') Forgot Password
					input(type="hidden" value="#{redirect}" name="redirect")